<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="313.0" prefWidth="224.0" spacing="10" stylesheets="@estilo.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="aplicacion.controller.ActualizarController">
    <!-- DefiniciÃ³n de padding mediante un objeto Insets -->
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
    
    <children>
        <!-- Fila para "Matricula": etiqueta y campo de texto -->
        <VBox alignment="CENTER_LEFT" spacing="5">
            <children>
                <Label text="Matricula" />
                <TextField fx:id="matricula" promptText="Ingrese la matricula" />
            </children>
        </VBox>

        <!-- Fila para "Modelo": etiqueta y campo de texto -->
        <VBox alignment="CENTER_LEFT" spacing="5">
            <children>
                <Label text="Modelo" />
                <TextField fx:id="modelo" promptText="Ingrese el modelo" />
            </children>
        </VBox>

        <!-- Fila para "Marca": etiqueta y campo de texto -->
        <VBox alignment="CENTER_LEFT" spacing="5">
            <children>
                <Label text="Marca" />
                <TextField fx:id="marca" promptText="Ingrese la marca" />
            </children>
        </VBox>

        <!-- Fila de botones alineados a la derecha -->
        <HBox alignment="BOTTOM_RIGHT" prefHeight="53.0" prefWidth="184.0" spacing="10">
            <children>
                <Button fx:id="confirmar" mnemonicParsing="false" onAction="#confirmar" text="Actualizar" />
                <Button fx:id="cancelar" mnemonicParsing="false" onAction="#cancelar" text="Cancelar" />
            </children>
        </HBox>
    </children>
</VBox>
